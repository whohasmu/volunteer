<?xml version="1.0" encoding="utf-8"?>






    <ripple xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:color="#00a6ff"

        tools:targetApi="lollipop"><!--버튼클릭시 색5e6ae9 ripple effect color -->
        <item android:id="@android:id/background">
            <shape android:shape="rectangle">

                <solid android:color="#f4f5f6" /> <!-- background color -->
                <!--f4f5f6-->
                <size
                    android:width="60dp"
                    android:height="60dp"
                    />

                <corners
                    android:radius="15dp"
                    />

                <stroke
                    android:color="#5bfae8"
                    android:width="3dp"

                    />
            </shape>
        </item>
    </ripple>
